             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XatGPT.MainPage">
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
            <Label Text="Chats"
                   HorizontalOptions="StartAndExpand"
                   VerticalOptions="CenterAndExpand"
